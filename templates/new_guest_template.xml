<domain type='kvm'>
  <name>{{ name }}</name>
  <description>Created with command:
{{ argv | join(" ")}}</description>
  <memory unit='GiB'>{{ ram }}</memory>
  <cpu mode='host-passthrough' check='none' migratable='off'/>
  <vcpu placement='static'>{{ cpu }}</vcpu>
  <os>
    <type arch='x86_64' machine='pc-i440fx-3.1'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'>
    <timer name='rtc' present='yes'/>
    <timer name='pit' present='yes'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/kvm</emulator>
    <disk type='block' device='disk'>
      <driver name='qemu' type='raw' cache='none' io='native'/>
      <source dev='/dev/{{ vg }}/{{ name }}'/>
      <target dev='vda' bus='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </disk>
{%- if iface == "ovs" %}
    <interface type='network'>
      <source network='ovs-network' portgroup='vlan-{{ vlan }}'/>
      <target dev='{{ name }}-0'/>
      <model type='virtio'/>
    </interface>
{%- elif iface == "direct" %}
    <interface type='direct'>
      <source dev='vlan{{vlan}}' mod='bridge'/>
      <target dev='{{name}}0'/>
      <model type='virtio'/>
    </interface>
{%- endif %}
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='tablet' bus='usb'/>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes'/>
    <video>
      <model type='cirrus' vram='9216' heads='1'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x06' function='0x0'/>
    </memballoon>
  </devices>
</domain>
